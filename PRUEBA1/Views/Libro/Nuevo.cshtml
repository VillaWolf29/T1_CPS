@{
}
@model PRUEBA1.Models.Libro;
<div>
    <div class="col-sm-8 offset-sm-2">
        <h2>Nuevo</h2>
        <form asp-controller="Libro" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label>Titulo</label>
                <input class="form-control" type="text" required asp-for="Titulo" />
            </div>    
            <div class="mb-3">
                <label>Autor</label>
                <input class="form-control" type="text" required asp-for="Autor" />
            </div>
            <div class="mb-3">
                <label>Genero</label>
                <input class="form-control" type="text" required asp-for="Genero" />
            </div>
            <div class="mb-3">
                <label>Fecha de Publicacion</label>
                <input class="form-control" type="date" required asp-for="FechaPublicacion" />
            </div>               
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Libro" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>
        </form>
    </div>
</div>