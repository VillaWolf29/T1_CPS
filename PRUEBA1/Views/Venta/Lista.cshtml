@model IEnumerable<PRUEBA1.Models.Venta>


<div class="container">
    <h2>Lista de Ventas</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3">
        <a href="@Url.Action("Nuevo")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Venta
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Método Pago</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var venta in Model)
                {
                    <tr>
                        <td>@venta.IdVenta</td>
                        <td>@(venta.Usuario?.Nombre ?? "N/A")</td>
                        <td>@venta.FechaVenta.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@venta.Total.ToString("C")</td>
                        <td>@venta.MetodoPago</td>
                        <td>
                            <span class="badge @(venta.Estado == "Completada" ? "bg-success" : venta.Estado == "Cancelada" ? "bg-danger" : "bg-warning")">
                                @venta.Estado
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Detalles", new { id = venta.IdVenta })" class="btn btn-info btn-sm" title="Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Editar", new { id = venta.IdVenta })" class="btn btn-warning btn-sm" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                @if (venta.Estado != "Cancelada")
                                {
                                    <a href="@Url.Action("Cancelar", new { id = venta.IdVenta })" class="btn btn-danger btn-sm" title="Cancelar" onclick="return confirm('¿Está seguro de cancelar esta venta?')">
                                        <i class="fas fa-times"></i>
                                    </a>
                                }
                                @if (venta.Estado == "Pendiente")
                                {
                                    <a href="@Url.Action("Completar", new { id = venta.IdVenta })" class="btn btn-success btn-sm" title="Completar" onclick="return confirm('¿Marcar venta como completada?')">
                                        <i class="fas fa-check"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}