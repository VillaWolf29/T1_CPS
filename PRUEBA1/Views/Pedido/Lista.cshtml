@model IEnumerable<PRUEBA1.Models.Pedido>

<h2>Lista de Pedidos</h2>
<a asp-action="Nuevo" class="btn btn-success mb-3">Nuevo Pedido</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Libro</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Fecha de Reserva</th>
            <th>Fecha de Entrega</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.IdReserva</td>
                <td>@pedido.Usuario?.Nombre</td>
                <td>@pedido.Libro?.Titulo</td>
                <td>@pedido.Producto?.Nombre</td>
                <td>@pedido.Cantidad</td>
                <td>@pedido.FechaReserva.ToString("dd/MM/yyyy")</td>
                <td>@pedido.FechaEntrega?.ToString("dd/MM/yyyy")</td>
                <td>@pedido.Estado</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@pedido.IdReserva" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@pedido.IdReserva" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
