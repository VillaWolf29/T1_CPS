@model PRUEBA1.Models.Pedido

<div class="col-sm-8 offset-sm-2 mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-light text-center border-0 rounded-top-4">
            <h2 class="fw-bold text-primary mb-0">?? Nuevo Pedido</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Nuevo" method="post">

                <div class="mb-3">
                    <label asp-for="IdUsuario" class="form-label fw-bold">Usuario</label>
                    <select asp-for="IdUsuario" class="form-select shadow-sm" asp-items="ViewBag.Usuarios"></select>
                    <span asp-validation-for="IdUsuario" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdLibro" class="form-label fw-bold">Libro</label>
                    <select asp-for="IdLibro" class="form-select shadow-sm" asp-items="ViewBag.Libros"></select>
                    <span asp-validation-for="IdLibro" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="IdProducto" class="form-label fw-bold">Producto</label>
                    <select asp-for="IdProducto" class="form-select shadow-sm" asp-items="ViewBag.Productos">
                        <option value="">-- Ninguno --</option>
                    </select>
                    <span asp-validation-for="IdProducto" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Cantidad" class="form-label fw-bold">Cantidad</label>
                    <input asp-for="Cantidad" class="form-control shadow-sm" type="number" min="1" />
                    <span asp-validation-for="Cantidad" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FechaEntrega" class="form-label fw-bold">Fecha de Entrega</label>
                    <input asp-for="FechaEntrega" class="form-control shadow-sm" type="date" />
                    <span asp-validation-for="FechaEntrega" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-controller="Pedido" asp-action="Lista" class="btn btn-warning px-4 py-2 fw-semibold shadow-sm hover-scale">
                        ? Volver
                    </a>
                    <button class="btn btn-primary px-4 py-2 fw-semibold shadow-sm hover-scale" type="submit">
                        ?? Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Animación para los botones */
    .hover-scale {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hover-scale:hover {
        transform: scale(1.05);
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.2);
    }

    /* Inputs */
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 6px rgba(13, 110, 253, 0.5);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
